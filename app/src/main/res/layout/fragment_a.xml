<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FragmentA">

    <TextView
        android:id="@+id/t_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:text="RETURNED"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/r_1"
        android:layout_below="@+id/t_1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

    <View
        android:id="@+id/v_1"
        android:layout_width="15dp"
        android:layout_alignBottom="@+id/t_2"
        android:layout_height="15dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rs"/>

    <TextView
        android:id="@+id/t_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/v_1"
        android:layout_marginStart="1dp"
        android:text="38,139"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_1"
        android:layout_toEndOf="@+id/v_1"
        android:textColor="@color/gray"
        android:text="of 42,812"
        android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/t_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="UPCOMING"
        android:textColor="@color/gray"
        android:layout_below="@id/r_1"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_below="@+id/t_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_2"
            android:layout_width="15dp"
            android:layout_alignBottom="@+id/t_3"
            android:layout_height="15dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/rs"/>

        <TextView
            android:id="@+id/t_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/v_2"
            android:layout_marginStart="1dp"
            android:textColor="#000"
            android:text="4,612"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_2"
            android:layout_toEndOf="@+id/v_2"
            android:text="of 42,812"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:src="@drawable/d2"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
</RelativeLayout>